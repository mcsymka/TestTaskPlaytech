<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout
					pattern="%highlight{[%d] - %msg%n}{FATAL=red blink, ERROR=red, WARN=yellow bold, INFO=black, DEBUG=green bold, TRACE=blue}"/>
		</Console>
	</Appenders>
	<Loggers>
		<Root level="info">
			<AppenderRef ref="Console"/>
		</Root>
		<Logger name="org.apache" level="error">
			<AppenderRef ref="Console"/>
		</Logger>
		<Logger name="httpclient" level="error">
			<AppenderRef ref="Console"/>
		</Logger>
		<Logger name="com.gargoylesoftware.htmlunit" level="off">
			<AppenderRef ref="Console"/>
		</Logger>
		<Logger name="org.openqa.selenium.remote.ProtocolHandshake" level="off">
			<AppenderRef ref="Console"/>
		</Logger>
		<Logger name="org.apache.commons.httpclient" level="off">
			<AppenderRef ref="Console"/>
		</Logger>
		<Logger name="io.github.bonigarcia" level="off">
			<AppenderRef ref="Console"/>
		</Logger>
		<Logger name="org.openqa.selenium" level="off">
			<AppenderRef ref="Console"/>
		</Logger>
		<Logger name="com.codeborne.selenide" level="off">
			<AppenderRef ref="Console"/>
		</Logger>
		<Logger name="com.jayway.restassured.internal" level="off">
			<AppenderRef ref="Console"/>
		</Logger>
		<Logger name="FileManager" level="off">
			<AppenderRef ref="Console"/>
		</Logger>
		<Logger name="com.sun.xml.internal.ws.model.JavaMethodImpl" level="off">
			<AppenderRef ref="Console"/>
		</Logger>

	</Loggers>
</Configuration>
